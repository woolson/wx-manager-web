// ----------------------- 颜色 -----------------------
$color-main = #0AC380
$color-green = #0AC380
$color-red = #F25353
$color-blue= #3B98EF

// ---------------------- 背景色 ----------------------
$color-bg = #F2f2f2  // 背景色
$color-bg-search = #EEE  // 搜索背景色
$color-bg-nav = #FaFaFa  // 导航栏背景色
$color-split = #E6E6E6  //分割线的颜色
$color-text = #2B3A42
$color-text-gray = #999
$color-shadow = rgba(0, 0, 0, .1)

// ---------------------- font ----------------------
$font-family-default = "PingFangSC-Regular", "PingFangSC", "Microsoft Yahei", arial, helvetica, sans-serif
$font-family-light = "PingFangSC-Light", "PingFangSC-Regular", "PingFangSC", "Microsoft Yahei", Arial, "Helvetica Neue", Helvetica, sans-serif
$font-family-bold = "PingFangSC-Medium", "PingFangSC-Regular", "PingFangSC", "Microsoft Yahei"

$font-size-title = 1.1rem    // 导航
$font-size-number = 1.2rem   // 数字
$font-size-head = .75rem     // 标题
$font-size-default = .7rem  // 正文
$font-size-label-small = .5rem   // 日期、标签文字
$font-size-label-large = .6rem  // 日期、标签文字
$font-size-symbol = .45rem       // 日期、标签文字

$font-weight-default = 500
$font-weight-light = 400

$font-color-default = #333
$font-color-dark = #000
$font-color-gray = #666
$font-color-gray-light = #979797

// ---------------------- line-height ----------------------
$line-height-default = 1.5

// ---------------------- border ----------------------
$border-width-default = 1px
$border-color-default = $color-split
$border-default = $border-width-default solid $border-color-default
$border-radius-default = .2rem
$border-radius-round = 1.575rem
