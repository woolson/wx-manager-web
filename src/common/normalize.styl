// 媒体查询，兼容分辨率
html, body
	font-family: $font-family-default
	background: $color-bg
	margin: auto
	color: $color-text
	font-size: 20px

button, input, optgroup, select, textarea
	font-family: $font-family-default

ul
	list-style: none
	padding: 0
	margin: 0

h1, h2
	margin: 0

.common-block
	padding .8rem
	margin .5rem
	border-radius .25rem
	background: white
	box-shadow 0 0 .8rem rgba(black, .05)
	margin .5rem auto
